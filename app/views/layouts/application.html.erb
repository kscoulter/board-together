<!DOCTYPE html>
<html>
<head>
  <title>BoardTogether</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <ul>
      <% if current_user %>
        <li class="user_name">
          <% if current_user.profile %>
            <a href="<%=user_profiles_path(current_user)%>">Hello, <%=current_user.email%></a>
          <% else %>
            <a href="<%=new_user_profiles_path(current_user)%>">Hello, <%=current_user.email%></a>
        </li>
      <%end%>
        <li><a href="<%=new_user_event_path(current_user) %>">Create Event</a></li>
      <% end %>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
    <ul>
  </nav>
  <main>
    <%= yield %>
  </main>
</body>
</html>
