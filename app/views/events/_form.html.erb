<%= form_for @event, html: {class: "new_event_form"} do |f| %>

  <%= f.label :game_name, "Board Game Name" %>
  <%= f.text_field :game_name %>

  <%= f.label :num_players, "Number Of Players" %>
  <%= f.text_field :num_players %>

  <%= f.label :time, "Date & Time" %>
  <%= f.datetime_select :time %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :description, "Event Description" %>
  <%= f.text_field :description %>

  <%= f.submit %>

<% end  %>
