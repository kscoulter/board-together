<%= form_for @profile, url: user_profile_path(@user) do |f| %>

  <%= f.label :location, "Your Location" %>
  <%= f.text_field :location %>

  <%= f.label :gender %>
  <%= f.text_field :gender %>

  <%= f.label :owned_games, "Board Games You Own" %>
  <%= f.text_field :owned_games %>

  <%= f.label :bio %>
  <%= f.text_field :bio %>

  <%= f.label :img_url, "Provide a URL for Your Profile Picture" %>
  <%= f.text_field :img_url %>

  <%= f.submit %>
<% end  %>
